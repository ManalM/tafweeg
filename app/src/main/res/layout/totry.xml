<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="584dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/hamlaName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/ownerName"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@id/ownerName"
            android:layout_marginTop="110dp"

            android:text="أسم الحملة " />

        <EditText
            android:id="@+id/hamlaName1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="136dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/ownerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="204dp"

            android:text="اسم صاحب الحملة " />

        <EditText
            android:id="@+id/ownerName1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/almorshid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/ownerName"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/ownerName"
            android:layout_marginBottom="183dp"

            android:text="اسم المرشد الديني" />

        <EditText
            android:id="@+id/almorshid1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="125dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/numerOfPeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/hamlaName"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@id/hamlaName"
            android:layout_marginBottom="78dp"

            android:text="عدد أفراد الحملة" />

        <EditText
            android:id="@+id/numerOfPeople1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="23dp"
            android:ems="10"
            android:inputType="textPersonName" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>